@model CreateTestimonialVM

@{
	ViewData["Title"] = "CreateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Create Testimonial</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">New Testimonial</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">User Name</label>
								<input type="text" asp-for="Name" class="form-control" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Title</label>
								<input type="text" asp-for="Title" class="form-control" id="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Comment</label>
								<input type="Comment" asp-for="Comment" class="form-control" id="Comment">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Image URL</label>
								<input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Submit</button>
						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>
