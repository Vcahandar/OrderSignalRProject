
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Code Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Index" asp-controller="QRCode">
                    <input type="text" name="value" />
                    <input type="submit" value="Generate QR Code" class="btn btn-warning" />
                    <br /><br />
                    @if (ViewBag.QrCodeImage != null)
                    {
                        <img src="@ViewBag.QrCodeImage" alt="" style="width:400px;height:400px" />
                    }
                </form>
            </div>
        </div>
    </div>
</div>