@model CreateMailVM

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mail Page</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Your Email Sending Panel</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ReceiverMail">Recipient Email Address</label>
								<input type="text" asp-for="ReceiverMail" class="form-control" id="ReceiverMail">
							</div>
							<div class="form-group">
								<label for="Subject">Subject</label>
								<input type="text" asp-for="Subject" class="form-control" id="Subject">
							</div>
							<div class="form-group">
								<label for="body">Message</label>
								<textarea rows="5" asp-for="Body" id="body" class="form-control"> </textarea>
							</div>

							<div class="card-action">
								<button class="btn btn-primary">Submit</button>
							</div>
						</div>


					</div>

				</form>
			</div>
		</div>
	</div>
</div>
