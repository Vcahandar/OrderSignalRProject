@model List<ResultBookingVM>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";

	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Reservation Transactions</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Reservation list</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform Reservation-related operations:
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Name Surname</th>
									<th scope="col">Phone</th>
									<th scope="col">Person Count</th>
									<th scope="col">Reservation status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Name</td>
										<td>@item.Phone</td>
										<td>@item.PersonCount</td>
										<td>Reservation received</td>
										<td><a href="/Booking/DeleteBooking/@item.BookingId" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/Booking/UpdateBooking/@item.BookingId" class="btn btn-outline-success">Update</a></td>
									</tr>

								}

							</tbody>
						</table>

						<a href="/Booking/CreateBooking/" class="btn btn-outline-primary">Create Booking</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

