@model List<ResultProductVM>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product operations</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Product list</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform operations related to the Product :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Product Name</th>
									<th scope="col">Price</th>
									<th scope="col">Category</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Name</td>
										<td>@item.Price</td>
										<td>@item.CategoryName</td>
										<td>@item.Status</td>
										<td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success">Update</a></td>
									</tr>

								}

							</tbody>
						</table>

						<a href="/Product/CreateProduct/" class="btn btn-outline-primary">Create Product</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

