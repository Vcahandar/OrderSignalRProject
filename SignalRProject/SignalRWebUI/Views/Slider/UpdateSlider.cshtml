@model UpdateSliderVM

@{
	ViewData["Title"] = "UpdateSlider";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Update Slider</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Update Slider</div>
						</div>
						<input type="hidden" asp-for="SliderId" />

						<div class="card-body">
							<div class="form-group">
								<label for="name">Title</label>
								<input type="text" asp-for="Title" class="form-control" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Description</label>
								<textarea type="text" rows="5" asp-for="Description" class="form-control" id="Description"></textarea>
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-success">Update</button>
						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>
