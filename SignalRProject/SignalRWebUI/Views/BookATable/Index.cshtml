@model CreateBookingVM


@{
    Layout = null;
}

<!DOCTYPE html>


<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")


<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")


    <!-- book section -->
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Make a Reservation
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div>
                                <input type="text" class="form-control" placeholder="Full Name" asp-for="Name" />
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Phone Number" asp-for="Phone" />
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Your Email" asp-for="Mail" />
                            </div>
                            <div>
                                <select asp-for="PersonCount" class="form-control nice-select wide" >
                                    <option value="" disabled selected>
                                        How many persons?
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                    <option value="6">
                                        6++
                                    </option>
                                </select>
                            </div>
                            <div>
                                <input type="date" class="form-control" asp-for="Date">
                            </div>
                            <div class="btn_box">
                                <button>
                                    Reserve Now
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <div id="googleMap"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end book section -->
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterComponetPartial")

    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutScriptComponetPartial")

</body>

</html>
