@model RegisterVM


@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalR Restaurant Registration</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/hamburger.jpg" alt="form" style="width:484px; height:584px">
			</div>
			<form class="form-detail" method="post">
				<h2>New User Registration</h2>
				<div class="form-row">
					<input type="text" id="full-name" asp-for="Name" class="input-text" placeholder="Your name" required>
				</div>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Your surname" required asp-for="Surname">
				</div>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Your User Name" required asp-for="Username">
				</div>
				<div class="form-row">
					<input type="text" id="your-email" class="input-text" placeholder="Your Email Address" asp-for="Mail" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>
				<div class="form-row">
					<input type="password" id="password" class="input-text" placeholder="Your password" asp-for="Password" required>
				</div>

				<button class="btn btn-primary">Register</button>
			</form>
		</div>
	</div>
</body>
</html>