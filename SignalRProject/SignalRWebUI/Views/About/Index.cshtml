@model List<ResultAboutVM>
﻿



@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Home Page About operations</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">About us list</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform transactions regarding the About Us field. Don't forget to create only 1 about us field.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Title</th>
									<th scope="col">Description</th>
									<th scope="col">Image</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.ImageUrl</td>
										<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Update</a></td>
									</tr>

								}

							</tbody>
						</table>

						<a href="/About/CreateAbout/" class="btn btn-outline-primary">Create About</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>