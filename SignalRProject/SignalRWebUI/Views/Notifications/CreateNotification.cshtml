
@model CreateNotificationVM

@{
	ViewData["Title"] = "CreateNotification";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Create Notification</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">New Notification</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Notification Type</label>
								<input type="text" asp-for="Type" class="form-control" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Notification Icon</label>
								<input type="text" asp-for="Icon" class="form-control" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Description</label>
								<input type="text" asp-for="Description" class="form-control" id="name">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Submit</button>
						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>
