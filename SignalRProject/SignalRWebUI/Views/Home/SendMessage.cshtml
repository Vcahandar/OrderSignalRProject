@model CreateMessageVM
﻿

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Contact us
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-action="SendMessage" asp-controller="Home">
                        <div>
                            <input type="text" class="form-control" placeholder="Name and Surname" asp-for="NameSurname" />
                        </div>
                    
                        <div>
                            <input type="email" class="form-control" placeholder="Your Email adress" asp-for="Email" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Subject" asp-for="Subject" />
                        </div>
                        <div>
                            <textarea asp-for="MessageContent" rows="10" placeholder="You can write your message here..." class="form-control"></textarea>
                        </div>
                      
                        <div class="btn_box">
                            <button>
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>
